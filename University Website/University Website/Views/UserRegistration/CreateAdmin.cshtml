@model University_Website.Models.UserRegistration

<style>
    .input-validation-error {
        border: 1px solid #ff0000;
        background-color: #ffeeee;
    }
</style>
@if (ViewBag.User_Id != null)
{
    <script type="text/javascript">
        window.onload = function ()
        {
            alert("Dear @ViewBag.User_Name \nYour account Successfully Created \nYour User Id is @ViewBag.User_Id");
            window.location = "/UserRegistration/Index";
        }
    </script>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function ()
        {
            alert("@ViewBag.Message");
            window.location = "/UserRegistration/Index";
        }
    </script>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Admin Registration</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
