@model University_Website.Models.UserRegistration


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Password forgotten</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @ViewBag.Userdata.Security_Question1
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Security_Answer1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Security_Answer1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Security_Answer1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @ViewBag.Userdata.Security_Question2
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Security_Answer2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Security_Answer2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Security_Answer2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @ViewBag.Userdata.Security_Question3
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Security_Answer3, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Security_Answer3, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Security_Answer3, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@{
    if (ViewBag.wrongans == "yes")
    {
        <h3></h3>
        <script type="text/javascript">
            window.onload = function ()
            {
              
                alert("Please answer security questions correctly");
             }
        </script>
    }
}



<div>
    @Html.ActionLink("Back to Login", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
